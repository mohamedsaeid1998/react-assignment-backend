{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 40,
      "minLength": 4,
      "unique": true
    },
    "description": {
      "type": "text"
    },
    "price": {
      "type": "integer",
      "required": true,
      "min": 5
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "stock": {
      "type": "integer",
      "required": true,
      "max": 500
    }
  }
}
